<div class="container">
    <div class="hero-intro">
        <h1>Global Blog</h1>
    </div>
    <div class="content flex-layout">
        <% if(locals.blogPost) { %>
            <% blogPost.forEach((post) => { %>
                <div class="items">
                    <div class="item-content">
                        <h2><%= post.title %></h2>
                        <p><%= post.preview %></p>
                    </div>
                    <div class="button-con">
                        <button><a href="pages/<%= post.id %>">View</a></button>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h1>Nothing to see here</h1>
        <% } %>
    </div>
</div>